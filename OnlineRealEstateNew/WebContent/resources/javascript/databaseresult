create table search (
	id serial unique,
	property_type varchar(30),
	size varchar(30),
	rent varchar(30),
	region varchar(30),
	price varchar(30),
	school boolean,
	metro boolean,
	hospital boolean,
	shopping_mall boolean
	sold boolean
) 
